<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/colorPrimary">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivStart"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="match_parent"
            android:padding="@dimen/w_8"
            android:src="@drawable/ic_back_white_24dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tvStart"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/back_return"
            android:textColor="#FFFFFFFF"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#FFFFFFFF"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ivEnd"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:padding="@dimen/w_12"
            android:src="@drawable/ic_add_white_24dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tvEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="@dimen/w_8"
            android:background="@drawable/selector_bar_btn"
            android:paddingBottom="@dimen/w_8"
            android:paddingEnd="@dimen/w_16"
            android:paddingStart="@dimen/w_16"
            android:paddingTop="@dimen/w_8"
            android:text="@string/yes"
            android:textColor="@android:color/white"
            android:visibility="invisible" />
    </FrameLayout>
</FrameLayout>